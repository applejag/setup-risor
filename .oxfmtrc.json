{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "tabWidth": 2,
  "singleQuote": true,
  "semi": true,
  "printWidth": 100,
  "experimentalSortPackageJson": false,
  "ignorePatterns": ["dist"],
  "overrides": [
    {
      "files": ["*.{yml,yaml}"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
